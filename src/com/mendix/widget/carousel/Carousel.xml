<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.carousel.Carousel" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../xsd/widget.xsd">
    <name>Carousel</name>
    <description>Carousel with static images</description>  
    <icon/>
    <properties>

        <property key="staticImages" type="object" isList="true" required="true">
            <caption>Images</caption>
            <category>Images</category>
            <description/> 
            <properties>
            
                <property key="imageUrl" type="image" required="true">
                    <caption>Image</caption>
                    <category>Image</category>
                    <description>Image to add to the carousel</description>
                </property>

            </properties>
        </property>

        <property key="interval" type="integer" required="true" defaultValue="5000">
            <caption>Transition interval</caption>
            <category>Behaviour</category>
            <description>How long before the image automatically changes (milliseconds)</description>
        </property>

    </properties>
</widget>
